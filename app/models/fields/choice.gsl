.template 0

new c.stmt as s
  define s. = "$(f.NAME)_CHOICES = ("
endnew s

for f.choice as ch
  new c.stmt as s
    define s. = "    ('$(ch.key:)', _('$(ch.value:)')),"
  endnew s
endfor

new c.stmt as s
  define s. = ")"
endnew s

new c.stmt as s
  define s. = "$(f.name) = models.CharField(_('$(f.name)'), choices=$(f.NAME)_CHOICES, max_length=200$(my.options:))"
endnew s

.endtemplate